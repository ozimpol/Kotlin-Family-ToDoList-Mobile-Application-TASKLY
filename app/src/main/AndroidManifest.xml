<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/taskly"
        android:label="@string/app_name"
        android:roundIcon="@drawable/taskly"
        android:supportsRtl="true"
        android:theme="@style/Theme.FamilyTask"
        tools:targetApi="31">
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".LoginFamilyActivity" />
        <activity android:name=".CreateFamilyActivity" />
        <activity android:name=".LoginMemberActivity" />
        <activity android:name=".CreateMemberActivity" />
        <activity android:name=".FamilyActivity" />
        <activity android:name=".MemberAddActivity"/>
        <activity android:name=".AdminTaskActivity" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>